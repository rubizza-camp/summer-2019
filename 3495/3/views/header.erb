<header>
  <nav class="navbar navbar-expand-lg navbar-default bg-light">
    <a class="navbar-brand" href="/">SNACK WELL</a>
    <div>
      <ul class="navbar-nav">
        <li class="active"> 
          <a href="/" class="btn btn-dark">Main</a>
        </li>
        <%if !session[:id]%>
        <li>
          <button type="submit" class="btn btn-dark" data-toggle="modal" data-target="#modalLoginForm">Login</button>
        </li>
        <li>
          <button type="submit" class="btn btn-dark" data-toggle="modal" data-target="#modalSignUpForm">Sign up</button>
        </li>
        <%else%>
        <form action="/user_logout" method="post">
          <li>
            <button type="submit" class="btn btn-dark">Logout</button>
          </li>
        </form>
        <form action="/place_registration" method="get">
          <li>
            <button type="submit" class="btn btn-dark">Resataurant registration</button>
          </li>
        </form>
        <%end%>
        <li>
          <h4><span class="badge badge-primary"><%= session[:name] ? "Hello #{session[:name]}" : session[:error] %> </span></h4>
        </li>
      </ul>
    </div>
  </nav>
</header>
