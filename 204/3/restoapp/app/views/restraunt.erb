<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h1 class="my-4">
                <%= @restraunt.title %>
            </h1>
            <br>
            <a href="javascript:history.back()" class="btn btn-outline-dark"> Назад </a>
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">
            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="<%= request.base_url %>/images/<%= @restraunt.id %>.jpg" alt="">
                <div class="card-body">
                    <h3 class="card-title">Ресторан
                        <%= @restraunt.title %>
                    </h3>
                    <p class="card-text">
                        <%= @restraunt.description %>
                    </p>
                    <% if @restraunt.avg_mark == 0 || @restraunt.avg_mark == nil %>
                    <small class="text-warning">&#9734; &#9734; &#9734; &#9734; &#9734;</small>
                    <% elsif @restraunt.avg_mark == 1 %>
                    <small class="text-warning">&#9733; &#9734; &#9734; &#9734; &#9734;</small>
                    <% elsif @restraunt.avg_mark == 2 %>
                    <small class="text-warning">&#9733; &#9733; &#9734; &#9734; &#9734;</small>
                    <% elsif @restraunt.avg_mark == 3 %>
                    <small class="text-warning">&#9733; &#9733; &#9733; &#9734; &#9734;</small>
                    <% elsif @restraunt.avg_mark == 4 %>
                    <small class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    <% elsif  @restraunt.avg_mark == 5 %>
                    <small class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9733;</small>
                    <% end %>
                </div>
            </div>
            <br>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1998.6944187973277!2d<%= @location[:latitude]%>!3d<%= @location[:longitude] %>!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46963109750342b5%3A0xa101368ca37be1ed!2sGras+x+Madbaren!5e0!3m2!1sru!2sru!4v1564344265563!5m2!1sru!2sru" width="825" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>

            <!-- /.card -->
            <div class="card card-outline-secondary my-4">
                <div class="card-header">
                    Product Reviews
                </div>
                <% if @restraunt_reviews.any? %>
                <% @restraunt_reviews.each do |review| %>
                <div class="card-body">
                    <p>
                        <%= review.body %>
                    </p>
                    <small class="text-muted">Posted by
                        <%= session[:name] %></small>
                    <p class="text-muted">Rating:
                        <%= review.mark %></small>
                        <hr>
                        <% end %>
                        <% else %>
                        <br>
                        <p class="text-center"> No reviews. Be the first one! </p>
                        <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">

            </div>
            <form class="col-lg-9" method='POST' action="/new_review/<%=@restraunt.id %>">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Rating</label>
                    <select class="form-control" name="mark">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Your comment</label>
                    <textarea class="form-control" name="body" rows="4"></textarea>
                </div>
                <% if session[:name].nil? %>
                <a class="btn btn-lg btn-danger btn-block btn-login text-uppercase font-weight-bold mb-2">Only register users can comment</a>
                <% else %>
                <button class="btn btn-lg btn-light btn-outline-dark btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Leave Review</button>
                <% end %>
            </form>
            <!-- /.card -->
            <!-- /.col-lg-9 -->
        </div>
    </div>
</div>
</div>
<!-- /.container -->