<!--   Sinatra flash message   -->
<% flash.keys.each do |type| %>
  <div data-alert class="alert alert-danger alert-dismissible flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<ul class="nav fixed-top nav-pills">
  <li class="nav-item">
    <% if login? %>
      <a class="nav-link active" href="logout">Logout</a>
    <% else %>
      <a class="nav-link active" href="sign_in">Login</a>
    <%end %>

  <li class="nav-item">
    <a class="nav-link " href="/">Home</a>
  </li>
    <li class="nav-item">
    <a class="nav-link" href="/sign_up">Sign up</a>
  </li>
</ul>
