<div class="card-columns">
  <% @places.each do |place| %>
      <div class="card">
        <div class="card-body">
          <a href="/places/<%=place.name %>" ><h5 class="card-title"><%= place.name %></h5> </a>
          <h6 class="card-subtitle mb-2 text-muted"> Average grade : <%= place.reviews.average(:grade)%></h6>
          <p class="card-text"><%= place.short_description %></p>
          <p class="card-text"><small class="text-muted"><%= place.latitude %> <%= place.longitude %></small></p>
        </div>
      </div>
  <% end %>
</div>
